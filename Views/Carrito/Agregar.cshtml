@model Meditours.Models.Itinerarios
@{
    ViewData["Title"] = "Editar";
     Layout = "_DashboardLayout";
}

<div class="container-fluid">
	<div class="offset-12">
		<div class="card borrder">
			<div class="card-header bg-dark" >
				<h1 class="text-white">@ViewData["Title"]</h1>
			</div>

			<div class="card-body">
				<form asp-action="AgregarCarrito" method="post">

					<input type="hidden" asp-for="PkItinerario"/>
					<div class="form-group">
						<label asp-for="PkItinerario" class="Control-label"></label>
						<input asp-for="PkItinerario" class="form-control" placeholder="Ingresa nombre" value="@ViewBag.Itinerario.PkItinerario" required/>
					</div>

					<div class="form-group mt-3">
						<button type="submit" class="btn btn-secondary d-block mx-auto"> guardar</button>

					</div>
				</form>
					<a asp-controller="Carrito" asp-action="ItinerariosDestinos" > Volver</a>

			</div>

		</div>
	</div>
</div>