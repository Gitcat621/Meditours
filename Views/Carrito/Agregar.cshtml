@model Meditours.Models.Itinerarios
@{
    ViewData["Title"] = "Agregar al carrito";
     Layout = "_Layout";
}

<div class="Container">
    <div class="container-fluid">
	<div class="offset-12">
		<div class="card borrder">
			<div class="card-header bg-dark" >
				<h1 class="text-white">@ViewData["Title"]</h1>
			</div>

			<div class="card-body">
				<form asp-action="AgregarCarrito" method="post">
					<div class="form-group">
						<input type="hidden" asp-for="PkItinerario" class="form-control" placeholder="Ingresa nombre" value="@ViewBag.Itinerario.PkItinerario" required/>
					</div>
					<div class="form-group">
						<p>¿Seguro que quiere añadir este destino a su carrito?</p>
					</div>

					<div class="container">
						<button asp-controller="Carrito" asp-action="ItinerariosDestinos" class="btn btn-danger" asp-for="PkItinerario"> Volver</button>
						<button type="submit" class="btn btn-secondary">Añadir</button>

					</div>
				</form>

			</div>

		</div>
	</div>
</div>
</div>