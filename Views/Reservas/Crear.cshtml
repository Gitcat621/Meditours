@model Meditours.Models.Reservas
@{
    ViewData["Title"] = "Crear";
     Layout = "_DashboardLayout";
}

<div class="container-fluid">
	<div class="offset-12">
		<div class="card borrder">
			<div class="card-header bg-dark" >
				<h1 class="text-white">@ViewData["Title"]</h1>
			</div>

			<div class="card-body">
				<form asp-action="CrearReserva" method="post">


					<div class="form-group mt-3">
						<label asp-for="FkUsuario" class="Control-label"></label>
						<select asp-for="FkUsuario" asp-items="ViewBag.combo1" class="select2-placeholder-multiple form-control"> <option value="">--selecciona--</option></select>
					</div>

					<div class="form-group mt-3">
						<label asp-for="FkItinerario" class="Control-label"></label>
						<select asp-for="FkItinerario" asp-items="ViewBag.combo2" class="select2-placeholder-multiple form-control"> <option value="">--selecciona--</option></select>
					</div>

					<div class="form-group mt-3">
						<button type="submit" class="btn btn-secondary d-block mx-auto"> guardar</button>

					</div>
				</form>
					<a asp-controller="Home" asp-action="IndexAdmin" > Volver</a>

			</div>

		</div>
	</div>
</div>