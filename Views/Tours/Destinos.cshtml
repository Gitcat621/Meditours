font-weight: 600;
transition: .5s;
}

.btn-primary {
color: #000;
background-color: #9fd3c7;
border-color: #9fd3c7;
}

.btn-primary :hover{
background-color: #000;
border-color: #000;
}

.btn.btn-primary,
.btn.btn-secondary {
